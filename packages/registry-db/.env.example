# ==========================================
# MCP Gateway Registry Configuration
# ==========================================
# Copy this file to .env and configure your settings

# ========== Core Configuration ==========
# Vector database type (supported: weaviate)
VECTOR_STORE_TYPE=weaviate

# Embedding provider (supported: aws_bedrock..)
EMBEDDING_PROVIDER=aws_bedrock


# ========== Text Chunking ==========
# Maximum chunk size for vectorization (default: 2048)
MAX_CHUNK_SIZE=2048

# Overlap between chunks (default: 200)
CHUNK_OVERLAP=200


# ========== Weaviate Configuration ==========
# Weaviate server address
WEAVIATE_HOST=127.0.0.1
WEAVIATE_PORT=8080

# Authentication (optional, leave empty for no auth)
WEAVIATE_API_KEY=

# Collection name prefix (optional)
WEAVIATE_COLLECTION_PREFIX=


# ========== OpenAI Embeddings ==========
# Required when EMBEDDING_PROVIDER=openai
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=text-embedding-3-small


# ========== AWS Bedrock Embeddings ==========
# Required when EMBEDDING_PROVIDER=aws_bedrock
AWS_REGION=us-east-1
BEDROCK_MODEL=amazon.titan-embed-text-v2:0

# AWS credentials (optional, uses default AWS credentials chain if not set)
# AWS_ACCESS_KEY_ID=your-access-key-id
# AWS_SECRET_ACCESS_KEY=your-secret-access-key


# ========== MongoDB Configuration ==========
# MongoDB connection string
MONGO_URI=mongodb://127.0.0.1:27017/jarvis

# MongoDB authentication (optional)
MONGODB_USERNAME=
MONGODB_PASSWORD=


# ========== Quick Start Examples ==========

# Example 1: Local Weaviate + AWS Bedrock (Recommended)
# -----------------------------------------------------
# VECTOR_STORE_TYPE=weaviate
# EMBEDDING_PROVIDER=aws_bedrock
# WEAVIATE_HOST=127.0.0.1
# WEAVIATE_PORT=8080
# AWS_REGION=us-east-1

# Example 2: Local Weaviate + OpenAI
# ----------------------------------
# VECTOR_STORE_TYPE=weaviate
# EMBEDDING_PROVIDER=openai
# WEAVIATE_HOST=127.0.0.1
# WEAVIATE_PORT=8080
# OPENAI_API_KEY=sk-your-key-here
